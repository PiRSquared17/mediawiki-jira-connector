<atlassian-plugin key="com.pqre.jira.ext.rpc" i18n-name-key="admin.web.rpc.plugin.name" name="PQRE RPC JIRA Plugin">
    <plugin-info>
        <description key="admin.web.rpc.plugin.desc">${pom.description}</description>
        <version>${pom.version}</version>
        <application-version min="4.1" max="4.2"/>
        <vendor name="${pom.organization.name}" url="${pom.organization.url}"/>
    </plugin-info>

    <resource type="i18n" name="i18n" location="com.atlassian.jira.rpc.i18n"/>

    <component system="true" key="tokenManager" i18n-name-key="admin.web.rpc.plugin.token.manager.name"
               name="Token Manager" class="com.atlassian.jira.rpc.auth.TokenManagerImpl">
        <interface>com.atlassian.jira.rpc.auth.TokenManager</interface>
    </component>

    <component system="true" key="projectService" name="Project Service"
               class="com.atlassian.jira.rpc.soap.service.ProjectServiceImpl">
        <interface>com.atlassian.jira.rpc.soap.service.ProjectService</interface>
    </component>

    <component system="true" key="issueConstantsService" name="Issue Constants Service"
               class="com.atlassian.jira.rpc.soap.service.IssueConstantsServiceImpl">
        <interface>com.atlassian.jira.rpc.soap.service.IssueConstantsService</interface>
    </component>

    <component system="true" key="schemeService" name="Scheme Service"
               class="com.atlassian.jira.rpc.soap.service.SchemeServiceImpl">
        <interface>com.atlassian.jira.rpc.soap.service.SchemeService</interface>
    </component>

    <component system="true" key="issueService" name="Issue Service"
               class="com.atlassian.jira.rpc.soap.service.IssueServiceImpl">
        <interface>com.atlassian.jira.rpc.soap.service.IssueService</interface>
    </component>

    <component system="true" key="searchService" name="Search Service"
               class="com.atlassian.jira.rpc.soap.service.SearchServiceImpl">
        <interface>com.atlassian.jira.rpc.soap.service.SearchService</interface>
    </component>

    <component system="true" key="userService" name="User Service"
               class="com.atlassian.jira.rpc.soap.service.UserServiceImpl">
        <interface>com.atlassian.jira.rpc.soap.service.UserService</interface>
    </component>

    <component system="true" key="adminService" name="Admin Service"
               class="com.atlassian.jira.rpc.soap.service.AdminServiceImpl">
        <interface>com.atlassian.jira.rpc.soap.service.AdminService</interface>
    </component>

    <component system="true" key="soapService" name="SOAP Service"
               class="com.atlassian.jira.rpc.soap.JiraSoapServiceImpl">
        <interface>com.atlassian.jira.rpc.soap.JiraSoapService</interface>
    </component>

    <component system="true" key="soapUtilsBean" name="SOAP Utils"
               class="com.atlassian.jira.rpc.soap.util.SoapUtilsBean">
        <interface>com.atlassian.jira.rpc.soap.util.SoapUtilsBean</interface>
    </component>

    <component system="true" key="projectRoleService" name="Project Role Service"
               class="com.atlassian.jira.rpc.soap.service.ProjectRoleServiceImpl">
        <interface>com.atlassian.jira.rpc.soap.service.ProjectRoleService</interface>
    </component>

    <component system="true" key="remoteEntityFactory" name="Remote Entity Factory"
               class="com.atlassian.jira.rpc.soap.util.RemoteEntityFactoryImpl">
        <interface>com.atlassian.jira.rpc.soap.util.RemoteEntityFactory</interface>
    </component>

    <rpc-soap key="pqresoap" name="System SOAP Services" class="com.atlassian.jira.rpc.soap.JiraSoapServiceImpl">
        <description>The PQRE JIRA SOAP services.</description>
        <service-path>pqrejirasoapservice-v2</service-path>
        <published-interface>com.atlassian.jira.rpc.soap.JiraSoapService</published-interface>
    </rpc-soap>

    <rpc-xmlrpc key="pqrexmlrpc" name="System XML-RPC Services" class="com.atlassian.jira.rpc.xmlrpc.JiraXmlRpcService">
        <description>The PQRE JIRA XML-RPC services.</description>
        <service-path>pqrejira1</service-path>
    </rpc-xmlrpc>
</atlassian-plugin>
